<Configuration>
    <Appenders>
        <Console name="console">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="console"></AppenderRef>
        </Root>
    </Loggers>
</Configuration>